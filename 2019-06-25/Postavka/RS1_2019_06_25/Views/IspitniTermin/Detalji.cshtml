@using RS1_2019_06_25.VM

@model IspitniTerminDetaljiVM

<body>
        <div class="container">
            <br /><br /><br />
            <input hidden asp-for="@Model.AngazmanID" />
            <input hidden asp-for="@Model.IspitniTerminID" />
            <div>
                <label>Predmet</label>
                <input readonly asp-for="@Model.PredmetNaziv" />
            </div>
            <div>
                <label>Nastavnik</label>
                <input readonly asp-for="@Model.NastavnikNaziv" />
            </div>
            <div>
                <label>Akademska godina</label>
                <input readonly asp-for="@Model.AkademskaGodinaNaziv" />
            </div>
            <div>
                <label>Datum ispitta</label>
                <input type="date" asp-for="@Model.DatumIspita" />
            </div>
            <div>
                <label>Napomena</label><br />
                <textarea asp-for="@Model.Napomena" placeholder="Napomena"></textarea>
            </div>
            <br /><br />
            <div id="AjaxDiv">

            </div>
            <br /><br />
            <a class="btn btn-primary"
               asp-controller="Ajax"
               asp-action="Dodaj"
               asp-route-IspitniTerminID="@Model.IspitniTerminID"
               ajax-poziv="da"
               ajax-rezultat="AjaxDiv">Dodaj</a>

        </div>
</body>
<script>
    $.get("/Ajax/Index?IspitniTerminID=@Model.IspitniTerminID", function (d) {
        $("#AjaxDiv").html(d);
    });
</script>