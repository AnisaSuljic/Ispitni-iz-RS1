@using RS1_2019_06_25.VM

@model AjaxDodajVM

<body>
    <form asp-controller="Ajax" asp-action="Snimi">
        <div class="container">
            <br /><br /><br />
            <input hidden asp-for="@Model.IspitniTerminID" />
            <div>
                <label>Student</label>
                <select asp-for="StudentId" asp-items="@Model.Studenti"></select>
            </div>
            <div>
                <label>Ocjena</label>
                <input  asp-for="@Model.Ocjena" />
            </div>
            <div>
                <label>Pristup</label>
                <input asp-for="@Model.Pristupio"  />
            </div>
            <button type="submit" class="btn btn-primary">Snimi</button>
        </div>
    </form>
</body>