@using RS1_2019_12_02.VM

@model PopravniIspitDodajVM

<body>
    <form asp-controller="PopravniIspit" asp-action="Snimi">
        <div class="container">
            <br /><br /><br />

            <input asp-for="OdjeljenjeID" hidden/>

            <div>
                <label>Predmet</label>
                <select asp-for="PredmetID" asp-items="@Model.Predmet"></select>
            </div>
            <div>
                <label>Datum ispita</label>
                <input type="date" asp-for="DatumIspita" />
            </div>
            <div>
                <label>Skola</label>
                <input readonly asp-for="SkolaOznaka" />
            </div>
            <div>
                <label>Skolska godina</label>
                <input readonly asp-for="SkolGodOznaka" />
            </div>
            <div>
                <label>Odjeljenje</label>
                <input readonly asp-for="OdjeljenjeOznaka" />
            </div>
        </div>
        <button class="btn btn-primary" type="submit">Snimi</button>
    </form>
</body>