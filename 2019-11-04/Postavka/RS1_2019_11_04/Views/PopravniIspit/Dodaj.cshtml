@using RS1_2019_11_04.VM

@model PopravniIspitDodajVM

<body>
    <form asp-controller="PopravniIspit" asp-action="Snimi">
        <div class="container">
            <br /><br /><br />

            <input hidden asp-for="PredmetID" />
            <div>
                <label>Predmet:</label>
                <input readonly asp-for="Predmet" />
            </div>
            <div>
                <label>Razred:</label>
                <input readonly asp-for="Razred" />
            </div>
            <div>
                <label>Datum:</label>
                <input asp-for="DatumIspita" type="date" />
            </div>
            <div>
                <label>Skola:</label>
                <select asp-for="SkolaID" asp-items="@Model.SkolaLista"></select>
            </div>
            <div>
                <label>Skolska godina:</label>
                <select asp-for="SkolskaGodinaID" asp-items="@Model.SkolskaGodinaLista"></select>
            </div>
        </div>
        <button class="btn btn-primary" type="submit">Snimi</button>
    </form>

</body>